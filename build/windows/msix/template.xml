<?xml version="1.0" encoding="utf-8"?>
<MsixPackagingToolTemplate
    xmlns="http://schemas.microsoft.com/msix/packaging/msixpackagingtool/template/2022">
    <Settings
        AllowTelemetry="false"
        ApplyACLsToPackageFiles="true"
        GenerateCommandLineFile="true"
        AllowPromptForPassword="false">
    </Settings>
    <Installer
        Path="gestalt-desktop"
        Arguments=""
        InstallLocation="C:\Program Files\Dyne.org\Gestalt">
    </Installer>
    <PackageInformation
        PackageName="Gestalt"
        PackageDisplayName="Gestalt"
        PublisherName="CN=Dyne.org"
        PublisherDisplayName="Dyne.org"
        Version="1.0.0.0"
        PackageDescription="Multi-terminal AI agent dashboard">
        <Capabilities>
            <Capability Name="runFullTrust" />
            
        </Capabilities>
        <Applications>
            <Application
                Id="org.dyne.gestalt"
                Description="Multi-terminal AI agent dashboard"
                DisplayName="Gestalt"
                ExecutableName="gestalt-desktop"
                EntryPoint="Windows.FullTrustApplication">
                
            </Application>
        </Applications>
        <Resources>
            <Resource Language="en-us" />
        </Resources>
        <Dependencies>
            <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
        </Dependencies>
        <Properties>
            <Framework>false</Framework>
            <DisplayName>Gestalt</DisplayName>
            <PublisherDisplayName>Dyne.org</PublisherDisplayName>
            <Description>Multi-terminal AI agent dashboard</Description>
            <Logo>Assets\AppIcon.png</Logo>
        </Properties>
    </PackageInformation>
    <SaveLocation PackagePath="gestalt-desktop.msix" />
    <PackageIntegrity>
        <CertificatePath></CertificatePath>
    </PackageIntegrity>
</MsixPackagingToolTemplate>
